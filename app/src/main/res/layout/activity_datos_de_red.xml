<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cdd"
    tools:context=".Activities.DatosDeRed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Olor a libro"
            android:textSize="42dp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/Proyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/logo"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/Grupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presentacio del grup"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arantxa"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/arantxa"/>

        <ImageView
            android:id="@+id/luis"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/luis"/>
        <ImageView
            android:id="@+id/mar"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/mar"/>
        <ImageView
            android:id="@+id/marti"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/marti"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/nomArantxa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arantxa"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/nomLuis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luis"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="35dp"/>
        <TextView
            android:id="@+id/nomMar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mar"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/nomMarti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MartÃ­"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="45dp"/>

    </LinearLayout>
</LinearLayout>